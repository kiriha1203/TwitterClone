<body>
<section>
  <h3>今何してる？</h3>
  <div class= "nav justify-content-end" >
    <%= link_to '一覧に戻る', tweets_path, class: 'nav-link' %>
  </div>

  <%= form_with(model: @tweet, local: true) do |form| %>
    <div class= "form-group">
      <%= form.text_area :content, row: 5, class: 'form-control', id: 'tweet_content' %>
    </div>

    <%= form.submit nil, class: 'btn btn-primary' %>
  <% end %>

</section>
</body>