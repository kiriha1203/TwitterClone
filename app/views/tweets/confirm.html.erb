<body>
<div class="create_edit_confirm_tweet">
  <h3>以下の内容で送信する。</h3>

  <%= form_with(model: @tweet, local: true, url: tweets_path) do |form| %>
    <div class="form-group">
      <%= form.hidden_field :content, row: 5, class: 'form-control', id: 'tweet_content' %>
      <p><%= @tweet.content %></p>
    </div>

    <%= form.submit "つぶやく", class: 'btn btn-primary' %>
    <%= form.submit "戻る",  name: 'back', class: 'btn btn-primary' %>

  <% end %>
</div>
</body>